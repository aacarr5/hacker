<h1> Welcome to Hacker Clone</h1>
<div class="post-index">
	<ul id="post-list">
		<%@posts.each do |post| %>
			<li>
			<%= link_to post.title, post_path(post)%>
			<%= button_to 'Delete Post', post, :method => "delete", :remote => true, :class => 'delete-button'%>
			</li>
			<!-- find link in text.txt file for alt -->
		<% end %>
</div>

<%=link_to "Create New Post", new_post_path%>

